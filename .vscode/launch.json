    "version": "0.2.0",
    "compounds": [
        {
            "name": "Start Server + Webpage",
            "configurations": ["Start Flask Server", "Launch Flask Webpage"]
        }
    ],
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Start Flask Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python/server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Flask Webpage",
            "type": "firefox",
            "request": "launch",
            "url": "localhost:3000"
        }
    ]
}